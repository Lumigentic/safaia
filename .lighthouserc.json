{
  "ci": {
    "collect": {
      "url": [
        "http://localhost:3000/",
        "http://localhost:3000/katalog",
        "http://localhost:3000/katalog/japonska-sztuka-ikebany",
        "http://localhost:3000/dla-autorow",
        "http://localhost:3000/o-nas",
        "http://localhost:3000/kontakt"
      ],
      "numberOfRuns": 3,
      "settings": {
        "preset": "desktop",
        "throttling": {
          "rttMs": 40,
          "throughputKbps": 10240,
          "cpuSlowdownMultiplier": 1
        }
      }
    },
    "assert": {
      "preset": "lighthouse:recommended",
      "assertions": {
        "categories:performance": ["error", { "minScore": 0.9 }],
        "categories:accessibility": ["error", { "minScore": 0.95 }],
        "categories:best-practices": ["error", { "minScore": 0.9 }],
        "categories:seo": ["error", { "minScore": 0.95 }],

        "first-contentful-paint": ["warn", { "maxNumericValue": 1800 }],
        "largest-contentful-paint": ["error", { "maxNumericValue": 2500 }],
        "cumulative-layout-shift": ["error", { "maxNumericValue": 0.1 }],
        "total-blocking-time": ["warn", { "maxNumericValue": 200 }],
        "speed-index": ["warn", { "maxNumericValue": 3400 }],
        "interactive": ["warn", { "maxNumericValue": 3800 }],

        "uses-responsive-images": "warn",
        "offscreen-images": "warn",
        "unminified-css": "error",
        "unminified-javascript": "error",
        "unused-css-rules": "warn",
        "unused-javascript": "warn",
        "modern-image-formats": "warn",
        "uses-optimized-images": "warn",
        "uses-text-compression": "error",
        "uses-long-cache-ttl": "warn",

        "font-display": "warn",
        "uses-rel-preconnect": "warn",
        "uses-rel-preload": "warn",

        "document-title": "error",
        "html-has-lang": "error",
        "meta-description": "error",
        "link-text": "error",
        "crawlable-anchors": "error",
        "robots-txt": "warn",
        "canonical": "warn",

        "aria-allowed-attr": "error",
        "aria-required-attr": "error",
        "aria-required-children": "error",
        "aria-required-parent": "error",
        "aria-roles": "error",
        "aria-valid-attr": "error",
        "aria-valid-attr-value": "error",
        "button-name": "error",
        "color-contrast": "error",
        "duplicate-id-active": "error",
        "duplicate-id-aria": "error",
        "form-field-multiple-labels": "error",
        "frame-title": "error",
        "heading-order": "warn",
        "html-lang-valid": "error",
        "image-alt": "error",
        "input-image-alt": "error",
        "label": "error",
        "link-name": "error",
        "list": "error",
        "listitem": "error",
        "meta-viewport": "error",
        "tabindex": "warn",
        "valid-lang": "error",

        "resource-summary:script:size": ["warn", { "maxNumericValue": 204800 }],
        "resource-summary:image:size": ["warn", { "maxNumericValue": 512000 }],
        "resource-summary:stylesheet:size": ["warn", { "maxNumericValue": 102400 }],
        "resource-summary:font:size": ["warn", { "maxNumericValue": 153600 }],
        "resource-summary:total:size": ["warn", { "maxNumericValue": 1024000 }]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
